{
    "name": "lua-debug",
    "displayName": "Lua/LuaJIT Debugger",
    "version": "0.1.1",
    "publisher": "BeamNG",
    "icon": "luajit.png",
    "description": "Visual Studio Code debugger extension for Lua/LuaJIT",
    "categories": [
        "Debuggers"
    ],
    "author": {
        "name": "BeamNG"
    },
    "license": "MIT",
    "private": false,
    "scripts": {},
    "engines": {
        "vscode": "^1.0.0"
    },
    "dependencies": {},
    "repository": {
        "type": "git",
        "url": "https://github.com/BeamNG/VSCodeLuaDebug.git"
    },
    "devDependencies": {},
    "contributes": {
        "debuggers": [
            {
                "type": "lua",
                "label": "Lua/LuaJIT Debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "lua"
                    ]
                },
                "program": "DebugAdapter.exe",
                "osx": {
                    "runtime": "mono"
                },
                "linux": {
                    "runtime": "mono"
                },
                "initialConfigurations": [
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "name",
                            "type",
                            "request",
                            "workingDirectory",
                            "listenPublicly",
                            "listenPort"
                        ],
                        "properties": {
                            "workingDirectory": {
                                "type": "string",
                                "description": "Working directory",
                                "default": "${workspaceRoot}"
                            },
                            "sourceBasePath": {
                                "type": "string",
                                "description": "Base path of lua source files",
                                "default": "${workspaceRoot}"
                            },
                            "executable": {
                                "type": "string",
                                "description": "An exe file to launch",
                                "default": "${workspaceRoot}/lua.exe"
                            },
                            "arguments": {
                                "type": "string",
                                "description": "Command line arguments for executable",
                                "default": "main.lua"
                            },
                            "env": {
                                "type": "object",
                                "description": "Environment variables for executable",
                                "default": {}
                            },
                            "listenPublicly": {
                                "type": "boolean",
                                "description": "If false, listens on any interface. Otherwise only on localhost.",
                                "default": false
                            },
                            "listenPort": {
                                "type": "integer",
                                "description": "Local TCP port to communicate between debug adapter and debuggee",
                                "default": 56789
                            },
                            "encoding": {
                                "type": "string",
                                "description": "Encoding of the debuggee. (Example: 'UTF-8', '949')",
                                "default": "UTF-8"
                            },
                            "killProcessOnDisconnect": {
                                "type": "boolean",
                                "description": "Determines if the debuggee process should be killed on disconnecting the debugger. Advised to set to false for embedded lua.",
                                "default": true
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "name",
                            "type",
                            "request",
                            "workingDirectory",
                            "listenPublicly",
                            "listenPort"
                        ],
                        "properties": {
                            "workingDirectory": {
                                "type": "string",
                                "description": "Working directory",
                                "default": "${workspaceRoot}"
                            },
                            "sourceBasePath": {
                                "type": "string",
                                "description": "Base path of lua source files",
                                "default": "${workspaceRoot}"
                            },
                            "listenPublicly": {
                                "type": "boolean",
                                "description": "Set this to true if the debuggee will run in different computer.",
                                "default": false
                            },
                            "listenPort": {
                                "type": "integer",
                                "description": "Local TCP port to communicate between debug adapter and debuggee.",
                                "default": 56789
                            },
                            "encoding": {
                                "type": "string",
                                "description": "Encoding of the debuggee. (Example: 'UTF-8', '949')",
                                "default": "UTF-8"
                            },
                            "killProcessOnDisconnect": {
                                "type": "boolean",
                                "description": "Determines if the debuggee process should be killed on disconnecting the debugger. Advised to set to false for embedded lua.",
                                "default": true
                            }
                        }
                    }
                }
            }
        ]
    },
    "__metadata": {}
}